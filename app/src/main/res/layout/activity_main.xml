<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/constraint_layout"
    android:gravity="center"
    android:stretchColumns="1">



        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kminchelle"
            android:textSize="30sp"
            android:id="@+id/edit_text"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="@+id/user_text"
            app:layout_constraintStart_toEndOf="@+id/user_text"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/user_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="password"
            android:textSize="30sp"
            android:id="@+id/edit"
            android:text="0lelplR"
            app:layout_constraintTop_toTopOf="@+id/password_text"
            app:layout_constraintStart_toEndOf="@+id/password_text"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="favorite sport"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textColor="#4E1DA6"
            android:textStyle="bold"
            android:id="@+id/favorite_sport"
            app:layout_constraintTop_toBottomOf="@+id/password_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_margin="20dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="football"
            android:textSize="30sp"
            android:id="@+id/football"
            app:layout_constraintTop_toBottomOf="@+id/favorite_sport"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:textColor="#9269DA"
            android:textStyle="bold" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tennis"
            android:textSize="30sp"
            android:id="@+id/tennis"
            app:layout_constraintTop_toBottomOf="@+id/football"
            app:layout_constraintStart_toStartOf="@+id/football"
            android:textColor="#9269DA"
            android:textStyle="bold" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="basketball"
            android:textSize="30sp"
            android:id="@+id/basketball"
            app:layout_constraintTop_toBottomOf="@+id/tennis"
            app:layout_constraintStart_toStartOf="@+id/football"
            android:textColor="#9269DA"
            android:textStyle="bold"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group"
            app:layout_constraintTop_toBottomOf="@+id/basketball"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gender"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:id="@+id/gender"
                android:textColor="#931515"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/radio_group"
                app:layout_constraintStart_toStartOf="@+id/radio_group"
                android:layout_marginTop="25dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:textSize="30sp"
                android:textColor="#BA4A4A"
                android:textStyle="bold"
                android:id="@+id/male"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                app:layout_constraintStart_toStartOf="@+id/gender"
                android:layout_marginStart="25dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="female"
                android:textSize="30sp"
                android:textColor="#BA4A4A"
                android:textStyle="bold"
                android:id="@+id/female"
                app:layout_constraintTop_toBottomOf="@+id/male"
                app:layout_constraintStart_toStartOf="@+id/gender"
                android:layout_marginStart="25dp"/>
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textSize="37sp"
            android:id="@+id/login"
            android:layout_marginTop="30dp"
            android:layout_span="2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/radio_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>